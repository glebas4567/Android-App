<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?android:colorBackground">

    <!-- Заголовок с именем пользователя -->
    <TextView
        android:id="@+id/textViewUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:textColor="?android:textColorPrimary" />

    <!-- Кнопка для списка посещенных мест -->
    <Button
        android:id="@+id/buttonVisitedPlaces"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Посещенные места"
        android:layout_marginBottom="16dp"
        android:backgroundTint="?android:colorAccent"
        android:textColor="?android:textColorPrimaryInverse"
        android:paddingVertical="12dp"
        android:textSize="16sp" />

    <!-- Кнопка для списка избранных мест -->
    <Button
        android:id="@+id/buttonFavoritePlaces"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Избранные места"
        android:layout_marginBottom="16dp"
        android:backgroundTint="?android:colorAccent"
        android:textColor="?android:textColorPrimaryInverse"
        android:paddingVertical="12dp"
        android:textSize="16sp" />

    <!-- Кнопка назад -->
    <Button
        android:id="@+id/buttonBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Назад"
        android:layout_marginBottom="16dp"
        android:backgroundTint="?android:colorButtonNormal"
        android:textColor="?android:textColorPrimaryInverse"
        android:paddingVertical="12dp"
        android:textSize="16sp" />

    <!-- Кнопка выйти -->
    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выйти"
        android:layout_marginBottom="16dp"
        android:backgroundTint="?android:colorButtonNormal"
        android:textColor="?android:textColorPrimaryInverse"
        android:paddingVertical="12dp"
        android:textSize="16sp" />

</LinearLayout>
